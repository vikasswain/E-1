<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    
    <class name="domain.WorkExperience" table="work_experience">
        <meta attribute="class-description">
            This class contains the WorkExperience detail. 
        </meta>
        <id name="entry_id" type="long" column="entry_id">
            <generator class="sequence">
                <param name="sequence">work_experience_entry_id_seq</param>
            </generator>
        </id>
        <property name="organization" column="organization" type="string"/>
        <property name="designation" column="designation" type="string"/>
        <property name="roleDescription" column="role_description" type="string"/>
        <property name="months" column="months" type="int"/>
        <property name="years" column="years" type="int"/>
        <property name="student_id" column="student_id" type="long"/>
    </class>    
    
    <sql-query name="findWorkExperienceById">
        <return class="domain.WorkExperience"/>
        select * from work_experience where entry_id = :entry_id
    </sql-query>
    <sql-query name="getWorkExperiences">
        <return class="domain.WorkExperience"/>
        select * from work_experience where student_id = :student_id
    </sql-query>
</hibernate-mapping>